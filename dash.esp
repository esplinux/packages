name    = "dash"
version = "0.5.10.2"
rev     = "0"

source = fetch("http://gondor.apana.org.au/~herbert/dash/files/dash-%s.tar.gz" % version)

load("musl.esp", "MUSL")

cflags = "--sysroot=%s --rtlib=compiler-rt -Os" % MUSL.sysroot
bootstrap = "--static" if BOOTSTRAP else ""

out = automake(source, env={
  "CC" : "clang",
  "CFLAGS" : cflags + " " + bootstrap,
  "LDFLAGS" : "-s -w"
})

shell("cd %s/bin; ln -s dash sh" % out)

DASH = struct(
  name    = name, 
  version = version, 
  rev     = rev,
  package = tarball(out , name, version, rev)
)
