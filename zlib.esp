name    = "zlib" 
version = "1.2.11" 
rev     = "0"

source = fetch("https://www.zlib.net/zlib-%s.tar.gz" % version)

load("musl.esp", "MUSL")

out = automake(source, env={
  "CC" : "clang",
  "CFLAGS" : "--sysroot=%s -rtlib=compiler-rt -O3" % MUSL.sysroot
})

ZLIB = struct(
  name    = name, 
  version = version, 
  rev     = rev,
  package = tarball(out, name, version, rev),
  lib     = out + "/lib",
  include = out + "/include"
)
