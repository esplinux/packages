name    = "byacc"
version = "20200330" 
rev     = "0"

source = fetch("https://invisible-mirror.net/archives/byacc/byacc-%s.tgz" % version)

load("musl.esp", "MUSL")

cflags = "--sysroot=%s --rtlib=compiler-rt -O3" % MUSL.sysroot
bootstrap = "--static" if BOOTSTRAP else ""

out = automake(source, env={
  "CC" : "clang",
  "CFLAGS" : cflags + " " + bootstrap,
})

BYACC = struct(
  name    = name, 
  version = version, 
  rev     = rev,
  package = tarball(out, name, version, rev)
)
