include ../common/autoconf-common.ninja

rule dev
  command = mkdir -p dev/lib; $
    mv out/include dev/include; $
    mv out/lib/*.a dev/lib; $
    mv out/lib/*.o dev/lib

build dev: dev out

build ${PACKAGE}-${VERSION}.tgz: package out | dev
build ${PACKAGE}-${VERSION}-dev.tgz: package dev

default ${PACKAGE}-${VERSION}.tgz ${PACKAGE}-${VERSION}-dev.tgz
