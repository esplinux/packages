name    = "musl" 
version = "1.2.0" 
rev     = "0"

source = fetch("https://musl.libc.org/releases/musl-%s.tar.gz" % version)
out = automake(source, env={
  "CC" : "clang",
  "AR" : "llvm-ar"
})

MUSL = struct(
  name    = name, 
  version = version, 
  rev     = rev,
  package = tarball(out, name, version, rev),
  lib     = out + "/lib",
  include = out + "/include",
  sysroot = out
)
